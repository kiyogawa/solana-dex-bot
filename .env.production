BACKUP_RPC_URL=https://solana-api.projectserum.com

# マーケット設定
MARKET_ADDRESS=8BnEgHoWFysVcuFFX7QztDmzuH8r5ZFvyP6sYwn1XTh6
DEX_PROGRAM_ID=9xQeWvG816bUx9EPjHmaT23yvVM2ZWbrrpZb9PusVFin

# ウォレット設定
# 注意: 実際の秘密鍵は環境変数として設定するか、セキュアなキーストアから読み込む
WALLET_PUBLIC_KEY=your_public_key_here
WALLET_PRIVATE_KEY=your_private_key_here

# トークン設定
SOL_MINT=So11111111111111111111111111111111111111112
USDC_MINT=EPjFWdd5AufqSSqeM2qN1xzybapC8G4wEGGkZwyTDt1v

# トレード設定 - 本番環境用に保守的な値に設定
INITIAL_BALANCE=1
DAILY_TARGET_RETURN=0.50
TRADING_INTERVALS_PER_DAY=24

# テクニカル指標設定 - より安定した設定
RSI_PERIOD=14
RSI_OVERSOLD=35
RSI_OVERBOUGHT=65

# リスク管理設定 - より保守的な設定
RISK_PER_TRADE=0.05
STOP_LOSS_PERCENTAGE=0.015
TAKE_PROFIT_MULTIPLIER=1.3
MAX_POSITIONS=2
MAX_DRAWDOWN=0.10

# 取引実行設定
MIN_VOLUME_THRESHOLD=2000
MAX_SPREAD_PERCENTAGE=0.002
MIN_VOLATILITY=0.0015

# システム設定
NODE_ENV=production
LOG_LEVEL=info
SIMULATION_MODE=false
DEBUG=false

# パフォーマンス設定
NODE_OPTIONS="--max-old-space-size=4096"
KEEP_ALIVE_INTERVAL=30000
TRANSACTION_TIMEOUT=60000
MAX_RETRIES=3
RETRY_DELAY=5000

# モニタリング設定
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_ALERTS=true

# Discord通知設定
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here
ALERT_ON_TRADE=true
ALERT_ON_ERROR=true
ALERT_ON_BALANCE_CHANGE=true

# バックアップ設定
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400
BACKUP_RETENTION_DAYS=30

# レート制限設定
MAX_REQUESTS_PER_SECOND=10
RATE_LIMIT_WINDOW=60000

# エラーハンドリング設定
MAX_CONSECUTIVE_ERRORS=5
ERROR_COOLDOWN_PERIOD=300000

# ネットワーク設定
NETWORK_TIMEOUT=30000
WEBSOCKET_RECONNECT_INTERVAL=5000
MAX_WEBSOCKET_RECONNECTS=10

# セキュリティ設定
ENABLE_IP_WHITELIST=true
ALLOWED_IPS=127.0.0.1
API_KEY_REQUIRED=true
API_KEY=your_api_key_here

# 緊急停止設定
EMERGENCY_STOP_LOSS_THRESHOLD=0.20
AUTO_SHUTDOWN_ON_ERROR=true
REQUIRE_MANUAL_RESTART=true
